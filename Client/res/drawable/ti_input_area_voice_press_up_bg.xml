<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <corners android:radius="@dimen/ti_input_area_voice_press_corner_radius" />
            <solid android:color="@color/cube_color_container_bg_tint" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="@dimen/ti_input_area_voice_press_corner_radius" />
            <stroke android:width="@dimen/ti_input_area_voice_press_border_width" android:color="@color/cube_color_container_bg_deep" />
            <solid android:color="@color/cube_color_container_bg_deep" />
        </shape>
    </item>
</selector>
