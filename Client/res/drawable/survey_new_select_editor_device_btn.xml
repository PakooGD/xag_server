<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_selected="true">
        <shape>
            <corners android:radius="6.0dip" />
            <solid android:color="@color/cube_color_state_red_primary" />
        </shape>
    </item>
    <item android:state_enabled="true" android:state_selected="false">
        <shape>
            <corners android:radius="6.0dip" />
            <solid android:color="@color/cube_color_state_green_primary" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <corners android:radius="6.0dip" />
            <solid android:color="@color/survey_color_background" />
        </shape>
    </item>
</selector>
